import java.util.Scanner;

public class KostyaInternet {
 public static void main(String[] args) {
 Scanner scanner = new Scanner(System.in);
 int a, b, c, d;
 a = scanner.nextInt();
 b = scanner.nextInt();
 c = scanner.nextInt();
 d = scanner.nextInt();
 scanner.close();
 int totalCost;
 if (d <= b) {
 totalCost = a;
 } else {
 totalCost = a + (d - b) * c;
 }
 System.out.println(totalCost);
 }
}
